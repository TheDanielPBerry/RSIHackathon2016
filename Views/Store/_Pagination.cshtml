
@model List<HackathonRetroStore.Models.Product>


<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 0; i < Model.Count()+10; i += 10)
        {
            int size = 10;
            if ((Model.Count() + i) < 10)
            {
                size = Model.Count() - (i / 10);
            }
            String url = String.Format("/hack2016/Store/Index?offset={0}&size={1}", i, size);
            <li><a href="@url">@Html.Raw((i/10)+1)</a></li>
        }
    </ul>
</nav>





